@model PasswordChangeDto;

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h2 class="text-center text-info">Şifre Değiştirme</h2>

@if (ViewBag.success=="true")
{
    <div class="alert alert-info">
        Şifreniz Güncellenmiştir.
    </div>
}
else
{
<div class="row">
    <div class="col-md-12">
        <form asp-action="PasswordChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaaswordOld" class="control-label"></label>
                <input asp-for="PaaswordOld" class="form-control" />
                <span asp-validation-for="PaaswordOld" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Şifre Değiştir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

